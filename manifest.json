{
  "manifest_version": 3,
  "name": "Better StudyGo",
  "version": "1.1.1",

  "description": "Enhances StudyGo with additional features and improvements.",
  "homepage_url": "https://github.com/ItsGoldMonke/betterstudygo",

  "icons": {
    "48": "icons/betterstudygo-48.png",
    "96": "icons/betterstudygo-96.png"
  },

  "permissions": [
    "activeTab",
    "storage"
  ],
  
  "action": {
    "default_icon": "icons/betterstudygo-48.png",
    "default_title": "Better StudyGo",
    "default_popup": "popup/popup.html"
  },
  "browser_specific_settings": {
  "gecko": {
    "id": "betterstudygo@goldmonke.me",
    "strict_min_version": "109.0",
    "data_collection_permissions": {
      "required": ["none"]
    }
  }
},  
  
  "content_scripts": [
    {
      "matches": ["*://*.studygo.com/*"],
      "js": ["betterstudygo.js"]
    }
  ]
}